<resources>

  <style name="AppTheme" parent="BaseAppTheme">
    <item name="android:statusBarColor">@color/colorStatusBarForL</item>
    <item name="android:navigationBarColor">@color/colorNavigationBar</item>
  </style>

  <style name="FullScreen" parent="BaseAppTheme">
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- 小写自动转大写 -->
    <item name="android:textAllCaps">false</item>
    <!-- action mode 弹出时覆盖部分布局 若 false 则不符盖，将原有布局下移 -->
    <item name="android:windowActionModeOverlay">true</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
    <!-- action bar 覆盖模式 -->
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
    <!--<item name="android:windowAnimationStyle">@style/ActivityAnim</item>-->
    <item name="actionMenuTextColor">@android:color/white</item>
  </style>

  <style name="ToolbarWhiteMenuText" parent="ThemeOverlay.AppCompat.ActionBar">
    <item name="actionMenuTextColor">@android:color/white</item>
  </style>

  <style name="ToolbarBlackMenuText" parent="ThemeOverlay.AppCompat.ActionBar">
    <item name="actionMenuTextColor">@android:color/black</item>
  </style>

  <style name="FloatDialog" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>

  <style name="TransparentPage" parent="BaseAppTheme">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsTranslucent">true</item>
  </style>

  <style name="TransparentSplashPageTheme" parent="FullScreen">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsTranslucent">true</item>
  </style>

</resources>